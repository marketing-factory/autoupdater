{
  "name": "moby/autoupdater",
  "description": "Composer autoupdater for Git projects",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Spoo",
      "email": "christian.spoo@marketing-factory.de"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/composer": "^2.1",
    "gitonomy/gitlib": "^1.2",
    "guzzlehttp/guzzle": "^7.2",
    "http-interop/http-factory-guzzle": "^1.0",
    "m4tthumphrey/php-gitlab-api": "^10.3",
    "symfony/console": "*",
    "symfony/flex": "^1.6",
    "symfony/process": "*",
    "symfony/yaml": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan-symfony": "^0.12",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "replace": {
    "symfony/polyfill-php72": "*"
  },
  "autoload": {
    "psr-4": {
      "Mfc\\Autoupdater\\": "src/"
    }
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "5.3.*"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR2",
    "phpstan": "vendor/bin/phpstan analyse --level=5 --memory-limit=512M --no-progress src"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "gitonomy/gitlib": "source"
    },
    "sort-packages": true
  }
}
